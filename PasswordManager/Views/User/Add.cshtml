@model User
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_Login";
}

<div class="container vh-100">
    <div class="row" style="justify-content: center; align-items: center; height: 100%; flex-direction: column;">
        <div class="col-6">
            <h4 class="text-center mb-4 ">Kayıt Ol</h4>
            <form method="post" asp-controller="User" asp-action="Add">
                <div class="form-group">
                    <input asp-for="Name" type="text" placeholder="Adı Soyadı" class="form-control">
                </div>
                <div class="form-group">
                    <input asp-for="Email" type="text" placeholder="Email" class="form-control">
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" placeholder="Şifre" class="form-control">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>
</div>